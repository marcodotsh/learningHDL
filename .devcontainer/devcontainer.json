{
  "name": "SystemVerilog Dev",
  "image": "ubuntu:jammy",
  "runArgs": [
    "--name",
    "systemverilog-dev"
  ],
  "remoteEnv": {
    "LANG": "C.UTF-8"
  },
  "initializeCommand": "xhost +SI:localuser:$(id -un)",
  "postCreateCommand": "./.devcontainer/post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "mshr-h.veriloghdl",
        "ms-python.python"
      ]
    },
    "mounts": [
      "source=${localWorkspaceFolder}/.devcontainer/install_config.txt,target=/install_config.txt,type=bind,consistency=cached",
      "source=${localWorkspaceFolder}/.devcontainer/install_config.txt,target=/install_config.txt,type=bind,consistency=cached"
    ]
  }
}